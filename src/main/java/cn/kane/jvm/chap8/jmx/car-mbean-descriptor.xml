    <attribute name="Color" description="The car color" type="java.lang.String"/>

    <operation name="setColor" description="setColor method" impact="ACTION" returnType="void">
      	<parameter name="color" description="the color parameter" type="java.lang.String"/>
    </operation>
    <operation name="setColor" description="setColor method" impact="ACTION" returnType="void">
      	<parameter name="color" description="the color parameter" type="java.lang.String"/>
    </operation>
    <operation name="getColor" description="getColor method" impact="INFO" returnType="java.lang.String"></operation>
    <operation name="start" description="drive method" impact="ACTION" returnType="void"> </operation>

  </mbean>

